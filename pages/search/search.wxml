<!-- 搜索框 -->
<view class="header">
    <!-- 用户输入内容 搜索内容  展示数据  事件：input组件：bindinput  -->
    <input bindinput='searchFoods'  focus="true" type="text" placeholder="请输入你喜欢的内容" />
</view>


<!-- 引入模板 -->
<import src='../../templates/foodList/foodList.wxml'/>
<!-- 使用模板 -->

<block wx:for='{{ searchList }}' wx:key='index'>
    <template is='foodList' data='{{ item }}'></template>
</block>

<view wx:if="{{isEmpty}}" style="font-size:30rpx">暂无数据</view>

