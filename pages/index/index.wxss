.banner{
    width: 100%;
    height: 340rpx;
    position: relative;
    font-size: 30rpx;
    color: white;
}
.banner image{
    height: 340rpx;
}
.banner .container{
    width: 100%;
    height: 340rpx;
}
.banner .desc{
    position: absolute;
    left: 0;
    right: 0;
    bottom: 0;
    height: 40rpx;
    text-align: center;
    background: rgba(0, 0, 0, 0.5);
    color:white;
}
.banner .num{
    position: absolute;
    right: 10rpx;
    bottom: 4rpx;
    color:white;
}


/* 每日一测 */
.content{
    padding: 16px 10px;
    display: flex;
    justify-content: space-between;
}
.content .item{
    flex: 1;
    text-align: center;
    font-size: 12px;
}
.content image{
    width: 306rpx;
    height: 186rpx;
}

/* 3.列表信息 */
.list{
    margin: 20rpx;
    border-bottom: 1px solid #eee;
    padding-bottom: 12rpx;
}
.title{
    font-size: 16px;
    margin-bottom: 16rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}
.wrapper{
    display: flex;
}
.wrapper image{
    width: 220rpx;
    height: 160rpx;
}
.wrapper .info{
    flex: 1;
    height: 160rpx;
    padding-left: 20rpx;
    position: relative;
}
.desc{
    font-size: 12px;
    color:#777;
    text-align: justify;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
}
.readyNum{
    position: absolute;
    font-size: 12px;
    right:0;
    bottom:0;
}
.readyNum text{
    color: red;
}
