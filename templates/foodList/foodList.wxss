.shop-info {
    margin-bottom: 20rpx;
    background: #fff;
    display: flex;
    padding: 20rpx;
    margin-top: 20rpx;
  }
  
  .shop-img image {
    width: 220rpx;
    height: 220rpx;
  }
  
  .shop-text {
    flex: 1;
    padding-left: 20rpx;
    position: relative;
  }
  
  .shop-text .title {
    font-size: 30rpx;
    color: #333;
    margin-bottom: 16rpx;
  }
  
  .shop-text  .detail {
    font-size: 26rpx;
    color: #5f5f5f;
    line-height: 38rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
  }
  
  .other {
    display: flex;
    position: absolute;
    bottom:10rpx;
  
  }
  
  .other .money {
    color: #ee2020;
    font-size: 24rpx;
    margin-right: 30rpx;
  }
  
  .other .num {
    color: #818181;
    font-size: 24rpx;
  }
  